{
    "compilerOptions": {
      "target": "es6",
      "lib": ["dom", "es6"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": false,
      "outDir": "./dist",
      "jsx": "react-jsx",          // Add this line to support JSX
      "moduleResolution": "node"   // Add this line for better module resolution
    },
    "include": ["src/**/*"]
  }
  